<Window x:Class="NAudioTutorial01WPF.Views.BasicWAVPlayerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Basic WAV Player" Height="128.947" Width="227.193">
    <Grid>
        <Button x:Name="btnOpenWAV" Content="Open WAV File" HorizontalAlignment="Left" Margin="34,22,0,0" VerticalAlignment="Top" Width="150" Height="23" Command="{Binding OpenWAVCommand}"/>
        <Button x:Name="btnPlayPause" Content="Play/Pause" HorizontalAlignment="Left" Margin="34,50,0,0" VerticalAlignment="Top" Width="150" Height="23" Command="{Binding PlayPauseCommand}"/>

    </Grid>
</Window>
